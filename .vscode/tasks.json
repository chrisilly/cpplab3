{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build active file",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fe${fileDirname}\\${fileBasenameNoExtension}.exe",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cl.exe build all files",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/W4",
                "/D_DEBUG",
                "/MDd",
                "/nologo",
                "/Fe:",
                "${fileDirname}\\main.exe",
                "${fileDirname}\\*.cpp"
            ],
            "problemMatcher": ["$msCompile"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task found on StackOverflow." // https://stackoverflow.com/questions/68421760/getting-error-lnk2019-unresolved-external-symbol-referenced-in-function-main
        }
    ],
    "version": "2.0.0"
}